<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MyEvents">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="My Events"
            android:id="@+id/title"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:textSize="20sp"  />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightblack"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/noeventslayout"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/myevents"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="You haven't any \nup coming events!"
                android:layout_margin="20dp"
                android:textColor="@color/grey"
                android:textSize="16sp"  />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="All Joined"
                android:visibility="gone"
                android:id="@+id/alleventstext"
                android:textColor="@color/green"
                android:layout_weight="1"
                android:textSize="16sp"  />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Created"
                android:visibility="gone"
                android:id="@+id/createdeventstext"
                android:textColor="@color/grey"
                android:layout_weight="1"
                android:textSize="16sp"  />

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/eventsrecyclerview"
            android:visibility="visible"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />

        <LinearLayout
            android:id="@+id/createeventlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="20dp"
                        android:gravity="center_vertical"
                        android:text="Description"
                        android:textColor="@color/grey"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/cardoutlinewhite"
                        android:gravity="start"
                        android:hint="Describe your trip what it consists of and why should people join it."
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/grey"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="20dp"
                        android:gravity="center_vertical"
                        android:text="City"
                        android:textColor="@color/grey"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/cardoutlinewhite"
                        android:gravity="center_vertical"
                        android:hint="Enter city you are going to visit"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/grey"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="20dp"
                        android:gravity="center_vertical"
                        android:text="Country"
                        android:textColor="@color/grey"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/cardoutlinewhite"
                        android:gravity="center_vertical"
                        android:hint="Enter country you are going to visit"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/grey"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginHorizontal="20dp"
                                android:gravity="center_vertical"
                                android:text="From Date"
                                android:textColor="@color/grey"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/fromdate"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginHorizontal="20dp"
                                android:background="@drawable/cardoutlinewhite"
                                android:gravity="center"
                                android:hint="Tap to pick"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/grey"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginHorizontal="20dp"
                                android:gravity="center_vertical"
                                android:text="To Date"
                                android:textColor="@color/grey"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/todate"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginHorizontal="20dp"
                                android:background="@drawable/cardoutlinewhite"
                                android:gravity="center"
                                android:hint="Tap to pick"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/grey"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="20dp"
                        android:gravity="center_vertical"
                        android:text="Upload an image of the place you're going to visit"
                        android:textColor="@color/grey"
                        android:textSize="15sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tourimagecard"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:layout_marginHorizontal="20dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/lightblack"
                        app:cardCornerRadius="10dp"

                        >

                        <ImageView
                            android:id="@+id/tourimage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/uploadimagebutton"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="20dp"
                        android:gravity="center"
                        android:text="Upload image"
                        android:textColor="@color/green"
                        android:textSize="15sp" />

                    <ProgressBar
                        android:id="@+id/p1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:indeterminateTint="@color/green"
                        android:visibility="gone" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/createtour"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="20dp"
                        app:cardBackgroundColor="@color/lightblack"
                        app:cardCornerRadius="10dp"

                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Create Now"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/createnewevent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/add_button"
            app:tint="@color/white" />
    </androidx.cardview.widget.CardView>

</FrameLayout>