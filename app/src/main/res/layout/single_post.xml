<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="16dp"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    tools:context=".Post">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:cardBackgroundColor="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:backgroundTint="@color/black"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="1dp"
                    android:layout_marginLeft="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:cardBackgroundColor="@color/lightblack"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:id="@+id/profile_post_image"
                            android:layout_width="match_parent"
                            android:scaleType="centerCrop"
                            android:layout_height="match_parent"  />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/post_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Name"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:scaleType="fitCenter"
                            android:layout_height="20dp"
                            android:padding="3dp"
                            android:src="@drawable/location" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/locationtext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bhutan"
                                android:textColor="@color/green"
                                android:textSize="12sp"  />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp"
                        android:id="@+id/follow"
                        android:layout_marginLeft="15dp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Follow"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/textfollow"
                            android:layout_marginVertical="3dp"
                            android:layout_marginHorizontal="15dp"
                            android:textSize="12sp"  />

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/black"
                        app:cardCornerRadius="5dp"
                        android:id="@+id/following"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Following"
                            android:textColor="@color/grey"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/textfollowing"
                            android:layout_marginVertical="5dp"
                            android:layout_marginHorizontal="15dp"
                            android:textSize="12sp"  />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="1dp"
                    android:layout_marginHorizontal="5dp">

                    <ImageView
                        android:id="@+id/deletepost"
                        android:layout_width="wrap_content"
                        android:scaleType="fitCenter"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:padding="7dp"
                        app:tint="@color/white"
                        android:src="@drawable/more" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/post_caption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:paddingLeft="10dp"
                android:text="Journal here:"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:visibility="gone"
                android:textColorHint="@color/white"
                android:textColorLink="@color/white"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/post_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppinsregular"
                android:paddingLeft="15dp"
                android:text="loading..."
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white"
                android:textColorLink="@color/white"
                android:visibility="gone"
                android:autoLink="web"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/post_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"   />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Add Like button -->
                <ImageView
                    android:id="@+id/like_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="like button"
                    android:padding="12dp"
                    app:tint="@color/white"
                    android:src="@drawable/like_button" />

                <TextView
                    android:id="@+id/post_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/comment_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="13dp"
                    app:tint="@color/white"
                    android:contentDescription="Comment"
                    android:src="@drawable/comment_button" />

                <TextView
                    android:id="@+id/post_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="17sp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:paddingBottom="10dp"
                app:cardBackgroundColor="@color/lightblack"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4">

                        <EditText
                            android:id="@+id/addcomment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/lightblack"
                            android:gravity="center_vertical"
                            android:hint="Add comment"
                            android:padding="10dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textColorHighlight="@color/white"
                            android:textColorHint="@color/grey"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/sendcomment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Send"
                            android:textColor="@color/green"
                            android:textColorHighlight="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/posttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppinsregular"
                android:paddingLeft="15dp"
                android:text="Posted on: "
                android:textColor="@color/grey"
                android:textColorHighlight="@color/grey"
                android:textColorHint="@color/grey"
                android:textStyle="italic"
                android:alpha="0.5"
                android:textColorLink="@color/grey"
                android:textSize="12sp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:reverseLayout="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightblack"
                android:layout_marginVertical="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Add TextView for post caption -->

</androidx.cardview.widget.CardView>
