<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/joinchat"
        app:cardBackgroundColor="@color/lightblack"
        app:cardCornerRadius="10dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:id="@+id/bgimage"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/black"
                android:alpha="0.5"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="140dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="bottom|center_vertical"
                app:cardBackgroundColor="@color/lightblack"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/profileimage"
                    />

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom|center_vertical"
                android:layout_marginLeft="90dp"
                android:layout_marginBottom="170dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Loading..."
                    android:id="@+id/name"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="14sp"  />
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="10dp"
                    app:cardBackgroundColor="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Creator"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/black"
                        android:layout_marginVertical="5dp"
                        android:textSize="11sp"  />

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="5dp"
                android:layout_gravity="bottom|right"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="@color/lightblack"
                android:visibility="visible"
                >
                <TextView
                    android:id="@+id/joinnowbutton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Join Now"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/white"
                    android:layout_marginVertical="5dp"
                    android:textStyle="bold"
                    android:textSize="12sp"  />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Created on: ..."
                    android:id="@+id/createdon"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"  />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:gravity="center"
                    android:id="@+id/startedcardvisiblity"
                    android:alpha="0.7"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/green"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Started"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginVertical="5dp"
                        android:textSize="11sp"  />

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="bottom|center_vertical"
                android:text="Loading..."
                android:id="@+id/countrywithdayandnight"
                android:layout_marginLeft="90dp"
                android:layout_marginBottom="150dp"
                android:textColor="@color/white"
                android:textSize="12sp"  />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="bottom|center"
                android:text="Loading..."
                android:background="@color/black"
                android:layout_marginBottom="100dp"
                android:textColor="@color/grey"
                android:id="@+id/namewithvisitingdate"
                android:paddingVertical="5dp"
                android:textSize="14sp"  />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:layout_gravity="bottom|center_vertical"
                android:layout_marginBottom="40dp"
                android:layout_marginHorizontal="20dp"

                >
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Loading..."
                        android:id="@+id/description"
                        android:textColor="@color/white"
                        android:textSize="11sp"  />
                </ScrollView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="10dp"
                    app:cardBackgroundColor="@color/lightblack"
                    android:layout_gravity="center_vertical|bottom"
                    android:layout_weight="1"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|top"
                        android:text="Members\n.."
                        android:textColor="@color/green"
                        android:id="@+id/membersjoined"
                        android:textSize="14sp"  />

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/more_button"
                android:padding="10dp"
                android:id="@+id/morebutton"
                android:layout_gravity="right|top"
                android:layout_marginRight="20dp"
              />


        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>