<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|top"
    android:weightSum="5"
    android:layout_marginTop="5dp"
    android:background="@color/black"
    android:id="@+id/layoutcard"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/lightblack"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/profilepage"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_marginRight="50dp"
        android:gravity="left"
        android:layout_gravity="center"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/lightblack"
            app:cardCornerRadius="10dp"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/green"
                        android:id="@+id/messagename"
                        android:text=""
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        app:cardBackgroundColor="@color/black"
                        app:cardCornerRadius="10dp"
                        android:id="@+id/imagevideocard"
                        android:visibility="gone"
                        android:layout_gravity="right"
                        >
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:id="@+id/image"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/black"
                                android:alpha="0.7"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="0 photos"
                                android:visibility="gone"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:id="@+id/textphotos"
                                />
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:scaleType="centerCrop"
                                android:id="@+id/videoicon"
                                app:tint="@color/grey"
                                android:visibility="gone"
                                android:layout_gravity="bottom|right"
                                android:layout_margin="20dp"
                                android:src="@drawable/videoicon"
                                />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="gone"
                        android:textSize="14sp"
                        android:id="@+id/repliedmessage"
                        android:gravity="start"
                        android:textColor="@color/grey"
                        android:padding="10dp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="start"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textColor="@color/white"
                            android:id="@+id/message"
                            android:text=""
                            android:autoLink="all"
                            android:textColorLink="@color/green"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="horizontal"
                        android:gravity="right"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="18:90"
                            android:textSize="11sp"
                            android:gravity="bottom|right"
                            android:textColor="@color/grey"
                            android:id="@+id/time"
                            android:layout_marginRight="10dp"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            app:cardBackgroundColor="@color/red"
                            app:cardCornerRadius="360dp"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="left|bottom"
                            android:layout_marginTop="5dp"
                            android:id="@+id/sentorunsent"
                            />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>